<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    tools:context=".ui.ScoreAddActivity">

    <TextView
        android:id="@+id/tv_key_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:paddingVertical="100dp"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_key_1"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="1"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_2"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="2"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_3"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="3"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_4"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="4"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_5"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="5"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_6"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="6"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_7"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="7"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_8"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="8"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_9"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="9"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
    <Button
        android:id="@+id/btn_key_0"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="0"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />

    <Button
        android:id="@+id/btn_key_del"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:text="delete"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />

    <Button
        android:id="@+id/btn_key_add"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_columnSpan="4"
        android:text="ADD"
        android:textColor="#555555"
        android:background="@drawable/outline_button"
        android:paddingVertical="20dp"
        />
</GridLayout>